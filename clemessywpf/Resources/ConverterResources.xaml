<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:local="clr-namespace:clemessywpf.Resources"
                    xmlns:conv="clr-namespace:clemessywpf.Converters">
    <conv:IntToStatutConverter x:Key="ConvIntStatut" />
    <conv:ErrorsConverter x:Key="ConvError" />
    <DataTemplate x:Key="DataTemplateStatut">
        <Image Source="{Binding Statut, Converter={StaticResource ConvIntStatut}}" />
    </DataTemplate>
</ResourceDictionary>